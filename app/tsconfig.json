{
  "compileOnSave": false,
  "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "experimentalDecorators": true,
      "noImplicitAny": false
  },
  "exclude": [
      "node_modules"
  ],
  "filesGlob": [
      "src/**/*.ts",
      "test/**/*.ts",
      "typings/index.d.ts"
  ]
}

